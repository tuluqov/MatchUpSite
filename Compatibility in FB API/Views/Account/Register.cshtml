@model MatchUp.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign up";
    Layout = null;
}

<div id="signupdialog" class="dialog">
    <div class="dialog__overlay"></div>
    <div class="dialog__content">
        <div class="dialog-inner">
            <h4>Sign up</h4>

            <div id="subscribe">
                @*@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", id = "notifyMe", name = "signupform" }))*@
                @using (Ajax.BeginForm("Register", "Account", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnSuccess", OnFailure = "OnFailureRegister" }, new { role = "form", id = "notifyMe", name = "signupform" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="p-2">
                        @Html.ValidationSummary("", new { @class = "text-danger", id = "validate-message-register" })
                    </div>
                    <div class="form-group">
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", required = "true", @class = "form-control srequiredField" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="controls">
                            <input class="form-control srequiredField" data-val="true" data-val-email="The Email field is not a valid e-mail address." 
                                   data-val-required="The Email field is required." id="Email" name="Email" 
                                   placeholder="Email" required type="email" value="">
                            @*@Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "true", @class = "form-control srequiredField" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="controls">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "true", @class = "form-control srequiredField", minlength = "6" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="controls">
                            <input placeholder="Date of birth" class="form-control" type="text" id="Birthday" name="Birthday" required onfocus="this.type='date';
                      this.setAttribute('onfocus','');this.blur();this.focus();">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="controls">
                            <button type="submit" name="submit" class="btn btn-lg submit">Sign up</button>
                        </div>
                    </div>

                }

                <div class="block-message">
                    <div class="message">
                        <p class="notify-valid"></p>
                    </div>
                </div>
            </div>
        </div>
        <button class="close-newsletter" data-dialog-close onclick="document.getElementById('signupdialog').classList.remove('dialog--open');"><i class="far fa-times-circle"></i></button>
    </div>
</div>


@section scripts
{
    <script>
        $("#Birthday").on("input", function () {
            if ($(this).val().length > 0) {
                $(this).addClass("full");
            }
            else {
                $(this).removeClass("full");
            }
        });
    </script>
}


