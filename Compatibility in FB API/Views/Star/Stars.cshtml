@using System.Globalization
@using MatchUp.Models
@model CompareWithFamouseViewModel

@{
    ViewBag.Title = "Stars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-4 col-md-4">
            <img src="@Model.Person.PhotoUrl" class="round">
        </div>
        <div class="col-8 col-md-8 mt-3">
            <h6>@Model.Person.Name</h6>
            <h6>@Model.Person.Birthday.ToString("MMMM d, yyyy", CultureInfo.GetCultureInfoByIetfLanguageTag("en-US"))</h6>
        </div>
    </div>
    <div>
        <nav class="sticky-card">
            <div class="nav nav-tabs pt-3" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-similar" role="tab" aria-controls="nav-home" aria-selected="true">Similar</a>
                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-compatibility" role="tab" aria-controls="nav-compatbility" aria-selected="false">Compatible</a>
                <a class="nav-item nav-link" id="nav-search-tab" data-toggle="tab" href="#nav-search" role="tab" aria-controls="nav-search" aria-selected="false">
                    <img src="https://img.icons8.com/ios/25/000000/search-filled.png" />
                </a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-similar" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="mt-2 pt-2">
                    @foreach (UserViewModel user in ViewBag.Ok)
                    {
                        <div class="border-bottom mb-2 pb-2 pt-2">
                            <a href="/home/userpage/@user.Id?isFamouse=true">
                                <div class="row mb-2">
                                    <div class="col-4">
                                        <img src="@user.PhotoUrl" class="round">
                                    </div>
                                    <div class="col-8 ">
                                        <div class="pt-3">
                                            <h4>@user.Name</h4>
                                            <h6 class="text-black-50">@user.Details</h6>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div>
                                <h6>Similarity @user.SimilarPercent%</h6>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar" role="progressbar" style="width: @user.SimilarPercent%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col text-center">
                                    @Html.ActionLink("Compatibility ❤️", "CompatibilityInPerson", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary m-1 col-5" })
                                    @Html.ActionLink("Compare ⚖️", "Comapare", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary m-1 col-5" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="nav-compatibility" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="mt-2 pt-2">
                    @foreach (UserViewModel user in ViewBag.Compatibility)
                    {
                        <div class="border-bottom mb-2 pb-2 pt-2">
                            <a href="/home/userpage/@user.Id?isFamouse=true">
                                <div class="row mb-2">
                                    <div class="col-4">
                                        <img src="@user.PhotoUrl" class="round">
                                    </div>
                                    <div class="col-8 ">
                                        <div class="pt-3">
                                            <h4>@user.Name</h4>
                                            <h6 class="text-black-50">@user.Details</h6>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div class="row">
                                <div class="col text-center">
                                    @Html.ActionLink("Compatibility ❤️", "CompatibilityInPerson", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary m-1 col-5" })
                                    @Html.ActionLink("Compare ⚖️", "Comapare", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary m-1 col-5" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="nav-search" role="tabpanel" aria-labelledby="nav-search-tab">
                <div class="form-group mt-3">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            <div class="form-row">
                                <input class="col m-1 form-control" type="text" name="name" placeholder="Enter name" />
                                <input class="col-3 btn btn-primary" type="submit" value="Search" />
                            </div>
                        </div>
                    }
        
                </div>
            </div>
        </div>
    </div>
</div>

