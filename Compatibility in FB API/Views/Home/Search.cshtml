@using System.Globalization
@using MatchUp.Models
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Search";
}

<div class="container">
    <div class="form-group">
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <div class="form-row">
                    <input class="col m-1 form-control" type="text" name="name" placeholder="Enter name" />
                    <input class="col-3 btn btn-primary" type="submit" value="Search" />
                </div>
            </div>
        }

    </div>
    @if (Model != null)
    {
        if (Model.Any())
        {
            <div class="row">
                @foreach (UserViewModel user in Model)
                {
                    <div class="col col-md-4">
                        <div class="card border-light shadow bg-white text-center mt-2">
                            <div class="card-body">
                                <a href="/home/userpage/@user.Id?isFamouse=true">
                                    <div class="row mb-3">
                                        <div class="col-4">
                                            <img src="@user.PhotoUrl" class="round">
                                        </div>
                                        <div class="col-8 text-center pt-2">
                                            <div class="card-title">
                                                <h5>@user.Name</h5>
                                                <p class="text-black-50">@user.Details</p>
                                            </div>
                                            <p>@user.Birthday.ToString("MMMM d, yyyy", CultureInfo.GetCultureInfoByIetfLanguageTag("en-US"))</p>
                                        </div>
                                    </div>
                                </a>
                                <div>
                                    <h6 class="text-left">Similarity @user.SimilarPercent%</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar" role="progressbar" style="width: @user.SimilarPercent%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                @Html.ActionLink("Compatibility ❤️", "CompatibilityInPerson", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary btn-shadow btn-gradient col-6" })
                                @Html.ActionLink("Compare ⚖️", "Comapare", "Home", new { id = user.Id, isFamouse = true }, new { id = user.Id, @class = "btn btn-primary btn-shadow btn-gradient col-5" })

                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col text-center">
                    <h4>Not found person by thid name</h4>
                </div>
            </div>
        }
    }
</div>