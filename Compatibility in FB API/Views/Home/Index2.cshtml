    <script>
        function OnSuccess(data) {
            document.location.href = "/";
        }
        function OnFailure(request, error) {
            $("#validate-message").html("Wrong login or password");
        }
        function OnFailureRegister(request, error) {
            $("#validate-message-register").html("Wrong data!");
        }
    </script>


    <script>
        $(document).ready(function () {
            window.dataLayer = window.dataLayer || [];
            var form = document.getElementsByName('signupform');
            if (form[0].addEventListener) {
                form[0].addEventListener('submit',
                    function (e) {
                        dataLayer.push({
                            'event': 'signupform'
                        });
                    });
            }
        })
    </script>


